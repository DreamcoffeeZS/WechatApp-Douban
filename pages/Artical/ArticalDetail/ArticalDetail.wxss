/* pages/ArticalDetail/ArticalDetail.wxss */


.topImage{
	width: 100%;
	height: 375rpx;
}

.musicImage{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin: -51rpx;
  top: 200rpx;
  opacity: 0.6;
}




.artical_info{
	display: flex;
	flex-direction: row;
	align-items: center;
	margin-top: 20rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
}

.artical_info_headerImage{
	width: 60rpx;
	height: 60rpx;
	border-radius: 30rpx;
	margin-right: 20rpx;
}

.artical_info_author{
	font-size: 15px;
	color: #333333;
	margin-right: 25rpx;
}

.artical_info_publish{
	font-size: 13px;
	color: #999999;
	margin-right: 30rpx;
}

.artical_info_date{
	font-size: 13px;
	color: #999999;
}




.artical_title{
	font-size: 17px;
	font-weight: 600;
	color: #333333;
	margin-top: 30rpx;
	margin-left: 30rpx;
	margin-left: 30rpx;
}


.artical_optionView{
	margin-top: 30rpx;
	margin-bottom: 30rpx;
	display: flex;
	flex-direction: row-reverse;
}

.artical_optionView Image{
	width: 80rpx;
	height: 80rpx;
	margin-right: 30rpx;
}


.artical_optionLine{
	width:530rpx;
	height: 1px;
	background-color: #e5e5e5;
	vertical-align: middle;
	position: relative;
	margin:0 auto;
	top: 38rpx;
	z_index:-99;
}


.artical_content{
	font-size: 15px;
	color: #333333;
	margin-left: 30rpx;
	margin-right: 30rpx;
	line-height: 44rpx;
	stroke-linecap: 2prx;
}






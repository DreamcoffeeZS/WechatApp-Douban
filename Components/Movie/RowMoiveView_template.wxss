@import "MovieView_template.wxss";

.RowMovieView_container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  /* margin-bottom: 20rpx; */
}

/*sectionOne*/

.RowMovieView_sectionOne {
  height: 60rpx;
  width: 100%;
}

.RowMovieView_sectionOne_left {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.RowMovieView_rectView {
  width: 8rpx;
  height: 40rpx;
  background-color: #39b146;
}

.RowMovieView_slogan {
  margin-left: 22rpx;
  font-size: 15px;
  color: #333;
}

.RowMovieView_sectionOne_right {
  float: right;
  height: 60rpx;
  margin-right: 30rpx;
}

.RowMovieView_moreText {
  color: #39b146;
  margin-right: 10rpx;
  vertical-align: middle;
  font-size: 15px;
}

.RowMovieView_arrowImage {
  width: 9rpx;
  height: 16rpx;
}


/*sectionTwo*/
.RowMovieView_sectionTwo {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  white-space: nowrap;
}

.MoviewView {
  display: inline-flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-bottom: 20rpx;

}

/*最后一个单元格距离边距30rpx  */
.MoviewView:nth-child(1){
  margin-left: 30rpx;
  /* background-color: red; */
}
.MoviewView:nth-child(7){
  margin-right: 30rpx;
  /* background-color: red; */
}